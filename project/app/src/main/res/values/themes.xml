<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="alertDialogTheme">@style/ThemeOverlay.Settings.MaterialDialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="main_bg">@color/main_bg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowBackground">?attr/main_bg</item>
        <item name="windowActionBar">false</item>
        <item name="android:scrollbars">none</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialDialog</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="switchStyle">@style/Widget.App.CompoundButton.Switch</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
    </style>

    <style name="BaseTheme.Black" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="alertDialogTheme">@style/ThemeOverlay.Settings.MaterialDialog</item>
        <item name="windowActionBar">false</item>
        <item name="android:scrollbars">none</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">?attr/main_bg</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="main_bg">@color/main_bg</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.BottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialDialog</item>
        <item name="switchStyle">@style/Widget.App.CompoundButton.Switch</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
    </style>
</resources>
